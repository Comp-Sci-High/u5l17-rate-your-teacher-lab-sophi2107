<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ratings</title>
  <!-- Link to the correct css file -->
  <link rel="stylesheet" href="/ratings.css" />
  <!-- Link to the correct js file -->
  <script src="/ratingScript.js" defer></script>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-logo">
      <img src="https://images.squarespace-cdn.com/content/v1/5b328976aa49a1b7b46b89c3/1530039440176-O24B7OCR4WPIAI62JZTW/CompSci.High_Circle_Logo.png?format=750w" alt="School Logo" />
    </div>
    <div class="nav-links">
      <!-- Link to the route for home -->
      <a href="teachers.ejs">Teachers</a>
      <!-- Link to the route for ratings and comments -->
      <a href="ratings.ejs">Comments & Ratings</a>
    </div>
  </nav>

  <div class="container">
    <h1>CSH Teacher Comments & Ratings</h1>

    <div class="form-section">
      <h2>Leave a Comment</h2>

      <!-- Create a form below that matches the Ratings schema -->
       <form>
        <label>Username: </label><br>
        <input type="text" name="username"  min = "0" max = "5" required/>

        <label>Teacher: </label><br>
    <input type="text" name="teacher"  min = "0" max = "5" required/>

    <label>Comment: </label><br>
    <input type="text" name="comment"   min = "0" max = "5" required/>

    <label>Rating: </label><br>
    <input type="text" name="rating"  min = "0" max = "5" required/>
    <button type="submit">Submit</button>
       </form>
      <!-- Inside of the input tag for rating add the attributes min="1" max="5" -->
      


      
    </div>

    <div class="teachers-grid">
      <% for (let i = 0; i < ratings.length; i++) { 
          const rating = ratings[i]; %>
        <div class="teacher-card">
          <div class="teacher-card-content">
            <h2><%= rating.teacher %></h2>
            <div class="stars">
              <% for (let i = 0; i < rating.rating; i++) { %>
                ⭐
              <% } %>
              <% for (let i = rating.rating; i < 5; i++) { %>
                ☆
              <% } %>
            </div>
            <p><strong>Comment:</strong> <%= rating.comment %></p>
            <p><em>By: <%= rating.username %></em></p>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
